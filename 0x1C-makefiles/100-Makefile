CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ): m.h

clean:
	@$(RM) *~ $(NAME) school

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
